{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "image": "",
    "name": "Pohoda Transaction Report",
    "description": "Check Bank Transactions in Stormware Pohoda",
    "executable": "pohoda-transaction-report",
    "setup": "",
    "cmdparams": "",
        "requirements": ["mServer"],
    "deploy": "apt install pohoda-client-checker",
    "homepage": "https://github.com/Spoje-NET/pohoda-client-checker",
        "topics": ["Pohoda", "mServer", "Bank", "Check"],
    "uuid": "b57f3a90-c604-4e19-8609-4af200571941",
    "environment": {
        "POHODA_URL": {
            "type": "string",
            "description": "mServer Api Endpoint",
            "defval": ""
        },
        "POHODA_USERNAME": {
            "type": "string",
            "description": "",
            "defval": ""
        },
        "POHODA_PASSWORD": {
            "type": "password",
            "description": "",
            "required": true,
            "defval": ""
        },
        "POHODA_BANK_IDS": {
            "type": "string",
            "description": "Pohoda Bank IDS (Account name)",
            "required": true,
            "defval": ""
        },
        "POHODA_IBAN": {
            "type": "string",
            "description": "Account IBAN",
            "required": true,
            "defval": ""
        },
        "POHODA_ICO": {
            "type": "string",
            "description": "Organization Number",
            "required": true,
            "defval": ""
        },
        "REPORT_SCOPE": {
            "type": "string",
            "description": "Time scope of transactions downloaded",
            "defval": "last_month",
            "required": false
        },
        "RESULT_FILE": {
            "type": "string",
            "description": "write output json data to",
            "defval": "transaction_report.json",
            "required": false
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": "write log messages using",
            "defval": "console|syslog",
            "required": false
        },
        "APP_DEBUG": {
            "type": "bool",
            "description": "Show debug messages",
            "defval": "False",
            "required": true
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": "Default name for Zabbix Item key name",
            "defval": "pohoda-transaction-report-{POHODA_ICO}",
            "required": false
        }
    },
    "multiflexi": "1.7.3"
}
